<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - OCBC_Joint_Account_Application</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
    <link rel="stylesheet" href="~/css/site.css" />

    @{
        if (Context.Session.GetString("PageType") == "Singpass")
        {
            <link rel="stylesheet" href="~/css/style_singpass.css" />
        }
        else if (Context.Session.GetString("PageType") == "OCBC")
        {
            <link rel="stylesheet" href="~/css/style_ocbc.css" />
        }
        else if (Context.Session.GetString("PageType") == "Account360")
        {
            <link rel="stylesheet" href="~/css/style_account360.css" />
        }
        else if (Context.Session.GetString("PageType") == "iBanking")
        {
            <link rel="stylesheet" href="~/css/style_iblogin.css" />
        }
    }
</head>

<body>
    <header>
        @{
            if (Context.Session.GetString("PageType") == "Account360")
            {
                @await Html.PartialAsync("_Account360Menu.cshtml");
            }
            else if (Context.Session.GetString("PageType") == "Singpass")
            {
                @await Html.PartialAsync("_SingpassMenu.cshtml");
            }
            else if (Context.Session.GetString("PageType") == "OCBC")
            {
                @await Html.PartialAsync("_HomeMenu.cshtml");
            }
        }
    </header>

    <main role="main" class="pb-3">
        <div class="modal fade" id="ButtonDisabled" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true" runat="server">
            <div class="modal-dialog">
                <div class="modal-content" style="height: 50px; width: 500px">
                    <div class="alert alert-danger" style="width: 500px;">
                        <strong>Button Disabled!</strong>
                    </div>
                </div>
            </div>
        </div>
        @RenderBody()
    </main>


    @{
        if (Context.Session.GetString("PageType") == "Singpass")
        {
            <footer>
                @await Html.PartialAsync("_SingpassFooter.cshtml");
            </footer>
        }
        else if (Context.Session.GetString("PageType") == "OCBC" || Context.Session.GetString("PageType") == "Account360")
        {
            <footer>
                @await Html.PartialAsync("_OCBCFooter.cshtml");
            </footer>
        }
    }

    <script src="https://unpkg.com/@("@")lottiefiles/lottie-player@latest/dist/lottie-player.js"></script>
    <script src="https://code.jquery.com/jquery-3.3.1.slim.min.js" integrity="sha384-q8i/X+965DzO0rT7abK41JStQIAqVgRVzpbzo5smXKp4YfRvH+8abtTE1Pi6jizo" crossorigin="anonymous"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.7/umd/popper.min.js" integrity="sha384-UO2eT0CpHqdSJQ6hJty5KVphtPhzWj9WO1clHTMGa3JDZwrnQq4sF86dIHNDz0W1" crossorigin="anonymous"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/js/bootstrap.min.js" integrity="sha384-JjSmVgyd0p3pXB1rRibZUAYoIIy6OrQ6VrjIEaFf/nJGzIxFDsf4x0xIM+B07jRM" crossorigin="anonymous"></script>
    <script src="https://code.iconify.design/2/2.0.3/iconify.min.js"></script>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/script.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
