<!-- Radio button -->
<div class="form-group form-check-inline">
    @foreach (var item in ViewData["SingaporeanSelection"] as List<string>)
    {
        <label class="col-form-label">
            <input asp-for="Singaporean" type="radio" value="@item" class="form-check-input" />
            <span style="font-weight:normal; padding-right:20px">@item</span>
        </label>
    }
</div>
