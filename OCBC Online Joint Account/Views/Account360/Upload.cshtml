<!--If user chooses Singaporean (Default option from the radio btn) radio btn, hide the Foreigner details-->
<form asp-action="" enctype="multipart/form-data">
    <div class="container d-flex">
        <div class="container col-md-8" style="max-width:65%; margin-left:0;">
            <div class="container">
                <div class="row">
                    <div class="card text-center col-md-6 shadow-sm">
                        <div class="card-body d-flex flex-column">
                            <img class="card-img-top" src="~/image/no-image.png" alt="Card image cap">
                            <h5 class="card-title">Photo Identity (Front)</h5>
                            <p class="card-text">With supporting text below as a natural lead-in to additional content.</p>
                            <input type="file" asp-for="CustNRICFront" style="margin-bottom:20px;" /><!--Upload btn-->
                        </div>
                    </div>
                    <div class="card text-center col-md-6 shadow-sm">
                        <div class="card-body d-flex flex-column">
                            <img class="card-img-top" src="~/image/no-image.png" alt="Card image cap">
                            <h5 class="card-title">Photo Identity (Back)</h5>
                            <p class="card-text">With supporting text below as a natural lead-in to additional content.</p>
                            <input type="file" asp-for="CustNRICBack" style="margin-bottom:20px;" /><!--Upload btn-->
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="card text-center col-md-6 shadow-sm">
                        <div class="card-body d-flex flex-column">
                            <img class="card-img-top" src="~/image/no-image.png" alt="Card image cap">
                            <h5 class="card-title">Residential Address</h5>
                            <p class="card-text">With supporting text below as a natural lead-in to additional content.</p>
                            <input type="file" asp-for="CustProofOfResidence" style="margin-bottom:20px;" /><!--Upload btn-->
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="container col-md-4">
            @{
                @await Html.PartialAsync("_AccountInfoCard.cshtml");
            }
        </div>
    </div>
    <input type="submit" class="btn btn-primary" asp-controller="Account360" asp-action="" value="Submit" />
</form>




